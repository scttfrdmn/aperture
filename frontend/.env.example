# Aperture Frontend Configuration
# Copy this file to .env.local and fill in your values

# API Gateway endpoint (from Terraform outputs)
VITE_API_ENDPOINT=https://your-api-gateway-url

# AWS Region
VITE_AWS_REGION=us-east-1

# Cognito Configuration (from Terraform outputs)
VITE_COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
VITE_COGNITO_CLIENT_ID=your-client-id
VITE_COGNITO_DOMAIN=your-domain.auth.us-east-1.amazoncognito.com

# CloudFront URLs (from Terraform outputs)
VITE_CLOUDFRONT_MEDIA_URL=https://your-cloudfront-media-url.cloudfront.net
VITE_CLOUDFRONT_FRONTEND_URL=https://your-cloudfront-frontend-url.cloudfront.net

# Application URL (for OAuth callbacks)
VITE_APP_URL=http://localhost:3000
