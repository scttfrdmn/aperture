# Development Environment Configuration
# Copy this file to dev.tfvars and fill in your values
# DO NOT commit dev.tfvars with real credentials!

# AWS Configuration
aws_region = "us-east-1"
environment = "dev"
project_name = "aperture"

# Domain Configuration
domain_name = "dev.repo.university.edu"

# DataCite Configuration (use DataCite test environment)
datacite_prefix = "10.5555"  # Your DataCite test prefix
# datacite_username = ""  # Set via environment variable or GitHub secret
# datacite_password = ""  # Set via environment variable or GitHub secret

# Budget Configuration
budget_alert_email = "devops@university.edu"
monthly_budget_limit = 100  # USD - lower limit for dev

# ORCID Configuration (use sandbox)
orcid_environment = "sandbox"
# orcid_client_id = ""      # Set via environment variable or GitHub secret
# orcid_client_secret = ""  # Set via environment variable or GitHub secret

# OAuth Configuration
cognito_callback_urls = [
  "http://localhost:3000/callback",
  "https://dev.repo.university.edu/callback"
]

# CORS Configuration
cors_allowed_origins = [
  "http://localhost:3000",
  "https://dev.repo.university.edu"
]
